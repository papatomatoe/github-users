{
	"compilerOptions": {
		"outDir": "./build/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"components/*": ["./components/*"],
			"styles/*": ["./styles/*"],
			"layouts/*": ["./layouts/*"],
			"hooks/*": ["./hooks/*"],
			"context/*": ["./context/*"],
			"mock/*": ["./mock/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
